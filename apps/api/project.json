{
  "name": "api",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "dist/apps/api"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx --env-file=.env src/server.ts",
        "cwd": "apps/api"
      }
    },
    "prisma-generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prisma generate",
        "cwd": "apps/api"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
